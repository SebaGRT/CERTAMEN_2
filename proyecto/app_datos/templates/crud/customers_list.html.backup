{% extends "base.html" %} {% block title %}Listado de Clientes - Dashboard{%
endblock %} {% block content %}
<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-4"><i class="bi bi-people"></i> Clientes</h1>
            <p class="lead text-muted">
                Gestiona todos los clientes del sistema
            </p>
        </div>
        <div class="col-md-4 text-end">
            <a href="{% url 'customer_add' %}" class="btn btn-primary btn-lg">
                <i class="bi bi-person-plus"></i> Agregar Cliente
            </a>
        </div>
    </div>

    <!-- Estadísticas -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-md-3">
                            <h3 class="text-primary">
                                {{ customers.paginator.count }}
                            </h3>
                            <p class="text-muted mb-0">Total Clientes</p>
                        </div>
                        <div class="col-md-3">
                            <h3 class="text-success">
                                {{ customers.object_list|length }}
                            </h3>
                            <p class="text-muted mb-0">En esta página</p>
                        </div>
                        <div class="col-md-3">
                            <a
                                href="{% url 'data_management' %}"
                                class="btn btn-outline-secondary btn-sm"
                            >
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                        </div>
                        <div class="col-md-3">
                            <a
                                href="{% url 'csv_upload' %}"
                                class="btn btn-outline-info btn-sm"
                            >
                                <i class="bi bi-file-earmark-arrow-up"></i>
                                Cargar CSV
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de clientes -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-white border-0 py-3">
                    <h5 class="mb-0">
                        <i class="bi bi-list-ul"></i> Listado Completo
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if customers %}
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Edad</th>
                                    <th>Género</th>
                                    <th>Ubicación</th>
                                    <th>Suscripción</th>
                                    <th>Método Pago</th>
                                    <th>Frecuencia</th>
                                    <th>Compras Previas</th>
                                    <th class="text-end">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for customer in customers %}
                                <tr>
                                    <td>
                                        <strong
                                            >#{{ customer.id_customer }}</strong
                                        >
                                    </td>
                                    <td>{{ customer.age }} años</td>
                                    <td>
                                        {% if customer.gender == 'Male' %}
                                        <span class="badge bg-primary">
                                            <i class="bi bi-gender-male"></i> {{
                                            customer.gender }}
                                        </span>
                                        {% else %}
                                        <span class="badge bg-danger">
                                            <i class="bi bi-gender-female"></i>
                                            {{ customer.gender }}
                                        </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <i class="bi bi-geo-alt text-muted"></i>
                                        {{ customer.id_location.state }}
                                    </td>
                                    <td>
                                        {% if customer.sub_status %}
                                        <span class="badge bg-success">
                                            <i class="bi bi-check-circle"></i>
                                            Activa
                                        </span>
                                        {% else %}
                                        <span class="badge bg-secondary">
                                            <i class="bi bi-x-circle"></i>
                                            Inactiva
                                        </span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <i
                                            class="bi bi-credit-card text-muted"
                                        ></i>
                                        {{ customer.id_paymentmethod.name }}
                                    </td>
                                    <td>{{ customer.freq_purchase }}</td>
                                    <td>
                                        <span class="badge bg-info"
                                            >{{ customer.prev_purchases }}</span
                                        >
                                    </td>
                                    <td class="text-end">
                                        <div
                                            class="btn-group btn-group-sm"
                                            role="group"
                                        >
                                            <a
                                                href="{% url 'customer_edit' customer.id_customer %}"
                                                class="btn btn-outline-primary"
                                                title="Editar"
                                            >
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <button
                                                onclick="confirmDelete('{% url 'customer_delete' customer.id_customer %}', 'Cliente #{{ customer.id_customer }}')"
                                                class="btn btn-outline-danger"
                                                title="Eliminar"
                                            >
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    {% else %}
                    <div class="text-center py-5">
                        <i class="bi bi-inbox fs-1 text-muted"></i>
                        <p class="lead text-muted mt-3">
                            No hay clientes registrados
                        </p>
                        <a
                            href="{% url 'customer_add' %}"
                            class="btn btn-primary"
                        >
                            <i class="bi bi-person-plus"></i> Agregar Primer
                            Cliente
                        </a>
                    </div>
                    {% endif %}
                </div>

                <!-- Pagination -->
                {% if customers.has_other_pages %}
                <div class="card-footer bg-white border-0 py-3">
                    <nav aria-label="Paginación de clientes">
                        <ul class="pagination justify-content-center mb-0">
                            {% if customers.has_previous %}
                            <li class="page-item">
                                <a
                                    class="page-link"
                                    href="?page=1"
                                    aria-label="Primera"
                                >
                                    <span aria-hidden="true"
                                        >&laquo;&laquo;</span
                                    >
                                </a>
                            </li>
                            <li class="page-item">
                                <a
                                    class="page-link"
                                    href="?page={{ customers.previous_page_number }}"
                                    aria-label="Anterior"
                                >
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>
                            {% else %}
                            <li class="page-item disabled">
                                <span class="page-link">&laquo;&laquo;</span>
                            </li>
                            <li class="page-item disabled">
                                <span class="page-link">&laquo;</span>
                            </li>
                            {% endif %} {% for num in
                            customers.paginator.page_range %} {% if
                            customers.number == num %}
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">{{ num }}</span>
                            </li>
                            {% elif num > customers.number|add:'-3' and num <
                            customers.number|add:'3' %}
                            <li class="page-item">
                                <a class="page-link" href="?page={{ num }}"
                                    >{{ num }}</a
                                >
                            </li>
                            {% endif %} {% endfor %} {% if customers.has_next %}
                            <li class="page-item">
                                <a
                                    class="page-link"
                                    href="?page={{ customers.next_page_number }}"
                                    aria-label="Siguiente"
                                >
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                            <li class="page-item">
                                <a
                                    class="page-link"
                                    href="?page={{ customers.paginator.num_pages }}"
                                    aria-label="Última"
                                >
                                    <span aria-hidden="true"
                                        >&raquo;&raquo;</span
                                    >
                                </a>
                            </li>
                            {% else %}
                            <li class="page-item disabled">
                                <span class="page-link">&raquo;</span>
                            </li>
                            <li class="page-item disabled">
                                <span class="page-link">&raquo;&raquo;</span>
                            </li>
                            {% endif %}
                        </ul>
                    </nav>
                    <p class="text-center text-muted mt-2 mb-0">
                        Página {{ customers.number }} de {{
                        customers.paginator.num_pages }} ({{
                        customers.paginator.count }} clientes en total)
                    </p>
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %} {% block extra_js %}
<script>
    // SweetAlert2 ya está disponible desde base.html
    // La función confirmDelete() ya está definida en base.html
</script>
{% endblock %}
